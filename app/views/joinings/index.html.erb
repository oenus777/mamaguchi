<% set_meta_tags title: "#{@community.name}の参加者一覧", description: "#{@community.name}の参加者一覧ページです。", noindex: true %>
<div class="container text-center mb-5">
    <h1>参加者一覧</h1>
    <div class="container-box mx-auto">
        <% if @community.image.attached? %>
        <%= image_tag @community.image.variant(resize_to_fill: [150,150]), class: "profile_image my-4" %>
        <% else %>
        <%= image_pack_tag 'community.jpg', class: "profile_image my-4", :size => "150x150" %>
        <% end %>
        <h2 class="mb-3 mx-auto"><%= @community.name %></h2>
        <div class="follow-box py-4">
            <%= content_tag(:label,"参加者",class: "list") %><br />
            <% if @joining_users.exists? %>
            <% @joining_users.each do |joining| %>
            <div class="follow py-4 mx-auto">
                <div class="ml-3">
                <%= link_to joining do %>
                <% if joining.image.attached? %>
                <%= image_tag joining.image.variant(resize_to_fill: [70,70]), class: "profile_image my-auto" %>
                <% else %>
                <%= image_pack_tag 'default.jpg', class: "profile_image my-auto", :size => "70x70" %>
                <% end %>
                <span class="font"><%= joining.name %></span>
                <% end %>
            　　</div>
            </div>
            <% end %>
            <% else %>
            <p class="mt-3">参加者がいません</p>
            <% end %>
        </div>
    </div>
</div>