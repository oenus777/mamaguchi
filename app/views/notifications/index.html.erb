<% set_meta_tags title: "#{current_user.name}さんの通知一覧", description: "#{current_user.name}さんの通知一覧画面です。", noindex: true %>
<div class="container text-center mb-5">
    <%= render 'layouts/flashes' %>
    <h1>通知一覧</h1>
    <div class="container-box mx-auto pb-1">
        <% if @notifications.exists? %>
        <div class="text-left pl-4">
            <%= render partial: 'notifications/notification', collection: @notifications %>
        </div>
        <% else %>
        <p>通知はありません</p>
        <% end %>
    </div>
</div>