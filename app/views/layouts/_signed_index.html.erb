<div class="container text-center mb-3">
    <%= render 'layouts/flashes' %>
    <h1>ホーム画面</h1>
    <% if @user.image.attached? %>
    <%= image_tag @user.image.variant(resize:"200x200"), class: "profile_image mt-4" %>
    <% else %>
    <%= image_tag 'default.jpg', class: "profile_image mt-4", :size => "200x200" %>
    <% end %>
    <p class="my-1"><%= @user.name %></p>
    <%= link_to '投稿する',new_post_path, class:'btn btn-danger btn-lg my-4' %>
    <h2 class="my-3 mx-auto">投稿一覧</h2>
</div>
<div class="container text-center mb-5" >
    <div class="row" id="contents_area" >
        <div class="col-md-8" id="post_area">
            <%= render partial: 'posts/cards', collection: @follow_posts, as: "post" %>
        </div>
        <div class="col-md-4" id="ranking_area">
            <%= render partial: 'posts/ranking', locals: { ranks: @all_ranks } %>
        </div>
    </div>
　　<div class="my-4">
            <%= paginate @all_posts %>
  　</div>
</div>