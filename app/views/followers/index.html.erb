<div class="container text-center mb-5">
    <h1>フォロワー一覧</h1>
    <div class="container-box mx-auto">
        <% if @user.image.attached? %>
        <%= image_tag @user.image, class: "profile_image my-4" %>
        <% else %>
        <%= image_tag 'default.jpg', class: "profile_image my-4" %>
        <% end %>
        <h2 class="mb-3 mx-auto"><%= @user.name %></h2>
        <div class="follow-box py-4">
            <%= content_tag(:label,"フォロワー",class: "list") %><br />
            <% if @followers.exists? %>
            <% @followers.each do |follower| %>
            <div class="follow py-4 mx-auto">
                <div class="ml-3">
                <%= link_to follower do %>
                <% if follower.image.attached? %>
                <%= image_tag follower.image, class: "profile_image my-auto" %>
                <% else %>
                <%= image_tag 'default.jpg', class: "profile_image my-auto" %>
                <% end %>
                <span class="font"><%= follower.name %></span>
                <% end %>
            　　</div>
            </div>
            <% end %>
            <% else %>
            <p class="mt-3">フォローされていません</p>
            <% end %>
        </div>
    </div>
</div>