<% set_meta_tags title: "#{@user.name}さんのフォロワー一覧", description: "#{@user.name}さんのフォロワー一覧ページです。", noindex: true %>
<div class="container text-center mb-5">
    <h1>フォロワー一覧</h1>
    <div class="container-box mx-auto">
        <% if @user.image.attached? %>
        <%= image_tag @user.image.variant(resize_to_fill: [150,150]), class: "profile_image my-4" %>
        <% else %>
        <%= image_pack_tag 'default.jpg', class: "profile_image my-4", :size => "150x150" %>
        <% end %>
        <h2 class="mb-3 mx-auto"><%= @user.name %></h2>
        <div class="follow-box py-4">
            <%= content_tag(:label,"フォロワー",class: "list") %><br />
            <% if @followers.exists? %>
            <% @followers.each do |follower| %>
            <div class="follow py-4 mx-auto">
                <div class="ml-3">
                <%= link_to follower do %>
                <% if follower.image.attached? %>
                <%= image_tag follower.image.variant(resize_to_fill: [70,70]), class: "profile_image my-auto" %>
                <% else %>
                <%= image_pack_tag 'default.jpg', class: "profile_image my-auto", :size => "70x70" %>
                <% end %>
                <span class="font"><%= follower.name %></span>
                <% end %>
            　　</div>
            </div>
            <% end %>
            <% else %>
            <p class="mt-3">フォローされていません</p>
            <% end %>
        </div>
    </div>
</div>