<div class="container text-center mb-5">
    <h1>フォロー一覧</h1>
    <div class="container-box mx-auto">
        <% if @user.image.attached? %>
        <%= image_tag @user.image, class: "profile_image my-4" %>
        <% else %>
        <%= image_tag 'default.jpg', class: "profile_image my-4" %>
        <% end %>
        <h2 class="mb-3 mx-auto"><%= @user.name %></h2>
        <div class="follow-box py-4">
            <%= content_tag(:label,"フォロー中",class: "list") %><br />
            <% if @followings.exists? %>
            <% @followings.each do |following| %>
            <div class="follow py-4 mx-auto">
                <div class="ml-3">
                <%= link_to following do %>
                <% if following.image.attached? %>
                <%= image_tag following.image, class: "profile_image my-auto" %>
                <% else %>
                <%= image_tag 'default.jpg', class: "profile_image my-auto" %>
                <% end %>
                <span class="font"><%= following.name %></span>
                <% end %>
            　　</div>
            </div>
            <% end %>
            <% else %>
            <p class="mt-3">フォローしていません</p>
            <% end %>
        </div>
    </div>
</div>